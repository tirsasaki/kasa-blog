---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div
    class="min-h-screen flex items-center justify-center bg-white px-4 py-8 dark:bg-gray-900 dark:prose-invert"
  >
    <div class="max-w-md w-full bg-white shadow-lg rounded-xl p-8 text-center dark:bg-gray-900 dark:prose-invert">
      <div class="mb-6">
        <h1 class="text-8xl font-bold text-gray-600 mb-4 dark:text-gray-200">404</h1>
        <h2 class="text-2xl font-semibold text-gray-600 dark:text-gray-300 mb-3">
          Page Not Found
        </h2>
        <p class="text-gray-500 mb-6">
          Sorry, the page you are looking for cannot be found. It may have been
          moved or deleted.
        </p>
      </div>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href="/"
          class="w-full sm:w-auto px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-center"
        >
        Back to Home
        </a>
        <a
          href="/blog"
          class="w-full sm:w-auto px-6 py-3 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-700 transition-colors text-center"
        >
        View Blog
        </a>
      </div>
    </div>
  </div>
</Layout>
